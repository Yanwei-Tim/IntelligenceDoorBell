<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
      <item   android:state_pressed="true">
            <shape >
                 <stroke  android:color="@color/black" android:width="3dip"/>
                    <solid   android:color="@color/green"/>
                  <corners     android:topLeftRadius="100dip" android:topRightRadius="100dip" android:bottomLeftRadius="100dip" android:bottomRightRadius="100dip"/>
            </shape>
      </item>
   <item    >
                   <shape >
                          <stroke  android:color="@color/black" android:width="3dip"/>
                    <solid   android:color="@color/white"/>
                  <corners     android:topLeftRadius="100dip" android:topRightRadius="100dip" android:bottomLeftRadius="100dip" android:bottomRightRadius="100dip"/>
            </shape>
   </item>
</selector>
