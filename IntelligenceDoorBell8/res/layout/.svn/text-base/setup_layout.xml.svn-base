<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCDCDC"
     >                      
     
     <RelativeLayout   
                 android:background="@drawable/title"   
                 android:layout_width="500.0dip"
                 android:layout_height="50.0dip"
                  > 
               <TextView    
                          android:id="@+id/setup"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="13.0dip"
                          android:layout_marginLeft="135dip"
                          android:text="设置"
                          android:textSize="20sp"
                          android:textColor="#FFFFFFFF"
                          />                  
     </RelativeLayout>
     
    
     
                  <LinearLayout 
                         android:layout_marginTop="22.0dip"  
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical" >
             <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/infouser"
                    android:text="账号信息"
                    android:textSize="12sp"
                    android:textColor="#ff000000"/>
             <RelativeLayout     android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                              >
                 
            
             <Button 
                        android:id="@+id/username"
                       
                        android:layout_width="fill_parent"
                        android:layout_height="36.0dip"
                        android:background="@drawable/textchange"
                        android:gravity="center_vertical"
                         android:text="用户信息"/>
             <TextView      
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" 
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow" />
             
              </RelativeLayout>
           
             <ImageView      
                          android:layout_width="500.0dip"
                          android:layout_height="wrap_content"
                          android:background="@drawable/buttonangang"/>
           <RelativeLayout   android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
             <Button   
                              android:id="@+id/changeword"
                              android:layout_width="fill_parent"
                              android:layout_height="36.0dip"
                              android:background="@drawable/textchange"
                              android:gravity="center_vertical"
                              android:text="修改密码"/>
             <TextView      
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" 
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow"/>
             
             </RelativeLayout>
         </LinearLayout>
         
                  <LinearLayout    
                          android:layout_width="fill_parent"   
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="25.0dip">
                     <TextView   
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="设备管理" 
                               android:textSize="12sp"
                               android:textColor="#ff000000"/>
                    <RelativeLayout   
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                     <Button 
                                 android:id="@+id/bind"
                                 android:layout_width="fill_parent"
                                 android:layout_height="36.0dip"
                                 android:gravity="center_vertical"
                                 android:text="绑定的设备" 
                                 android:background="@drawable/textchange"/>
                     
                     <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" 
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow" />
                     
                     
                     </RelativeLayout>
                  </LinearLayout>
    
                  <LinearLayout 
                           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="30.0dip" >
                      <TextView   
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="关于"
                                  android:textSize="12sp"
                                  android:textColor="#ff000000"/>
                    <RelativeLayout     
                                         android:layout_height="wrap_content"
                                         android:layout_width="wrap_content" >
                      <Button     
                                  android:id="@+id/banben"
                                  android:layout_width="fill_parent"
                                  android:layout_height="36.0dip"
                                  android:gravity="center_vertical"
                                  android:text="版本"
                                  android:background="@drawable/textchange" />
                     <TextView      
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" 
                            android:layout_centerVertical="true"
                            android:background="@drawable/arrow"    />
                     
                     
                     </RelativeLayout>
                     </LinearLayout>
             
              <Button     
                           android:id="@+id/zhuxiao"
                           android:layout_marginTop="-40dip"
                           android:layout_marginLeft="-80.0dip"
                           
                           android:layout_width="450.0dip"
                           android:layout_height="150.0dip"
                           android:textColor="#ffffffff"
                           android:text="注销用户"
                           android:textSize="18sp"
                           android:paddingTop="20.0dip"
                           android:paddingLeft="27.0dip"
                           android:paddingRight="8.0dip"
                           android:background="@drawable/redbutton1"
                           
                         
                          />
  
      
   
</LinearLayout>
